<section class="card background-card">
  <div class="card-body">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: "white-text" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.label :username, class: "white-text" %><br />
        <%= f.text_field :username, autocomplete: "username", placeholder: "Username" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "white-text" %>
        <% if @minimum_password_length %>
        <em class="white-text">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "white-text" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
      </div>

      <br/> 

      <% rand = Random.new %>
      <%= f.hidden_field :level, :value => 1 %>
      <%= f.hidden_field :hp, :value => rand.rand(100) %>
      <%= f.hidden_field :atk, :value => rand.rand(10) %>
      <%= f.hidden_field :def, :value => rand.rand(10) %>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-light" %>
      </div>

      <br/> 
    <% end %>

  <%= render "users/shared/links" %>

</div>
</section>
